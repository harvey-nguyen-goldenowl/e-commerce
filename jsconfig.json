{
  "compilerOptions": {
    "checkJs": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "paths": {
      "@Atom/*": ["src/components/atoms/*"],
      "@Component/*": ["src/components/*"],
      "@Screen/*": ["src/screens/*"],
      "@Style": ["src/styles"],
      "@Icon/*": ["src/assets/icons/*"]
    }
  }
}
